generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  meal      Meal[]
}

model Food {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  calories        Float?
  protein         Float?
  fat             Float?
  carbohydrates   Float?
  fibre           Float?
  sugar           Float?
  createdAt       DateTime          @default(now())
  updateAt        DateTime          @updatedAt
  categoryId      Int?
  mealId          Int?
  meal            Meal?             @relation(fields: [mealId], references: [id])
  category        Category?         @relation(fields: [categoryId], references: [id])
  FoodServingUnit FoodServingUnit[]
  mealFood        MealFood[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  foods     Food[]
}

model ServingUnit {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  createdAt       DateTime          @default(now())
  updateAt        DateTime          @updatedAt
  foodServingUnit FoodServingUnit[]
  mealFood        MealFood[]
}

model FoodServingUnit {
  id            Int         @id @default(autoincrement())
  foodId        Int
  servingUnitId Int
  grams         Float?
  servingUnit   ServingUnit @relation(fields: [servingUnitId], references: [id])
  food          Food        @relation(fields: [foodId], references: [id])
}

model Meal {
  id        Int        @id @default(autoincrement())
  dateTime  DateTime
  userId    Int
  createdAt DateTime   @default(now())
  updateAt  DateTime   @updatedAt
  foods     Food[]
  user      User       @relation(fields: [userId], references: [id])
  mealFood  MealFood[]
}

model MealFood {
  id            Int         @id @default(autoincrement())
  foodId        Int
  mealId        Int
  servingUnitId Int
  amount        Float
  servingUnit   ServingUnit @relation(fields: [servingUnitId], references: [id])
  meal          Meal        @relation(fields: [mealId], references: [id])
  food          Food        @relation(fields: [foodId], references: [id])
}

enum Role {
  USER
  ADMIN
}
